- model_class = @accommodation.class
%div.page-header
  %h1=t '.title'

%dl.dl-horizontal
  %dt
    -# %strong= model_class.human_attribute_name(:guest_last_name) + ":"
    %strong= "Prezime i ime"
  %dd= @accommodation.guest.to_label
  %dt
    %strong= model_class.human_attribute_name(:document_type) + ":"
  %dd= @accommodation.document_type.name
  %dt
    %strong= model_class.human_attribute_name(:document_number) + ":"
  %dd= @accommodation.document_number
  %dt
    %strong= model_class.human_attribute_name(:residence) + ":"
  %dd= @accommodation.residence.to_label
  %dt
    %strong= model_class.human_attribute_name(:entry_date) + ":"
  %dd= @accommodation.entry_date
  %dt
    %strong= model_class.human_attribute_name(:checkout_date) + ":"
  %dd= @accommodation.checkout_date

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")),
            accommodations_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")),
            edit_accommodation_path(@accommodation), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")),
            accommodation_path(@accommodation),
            :method => 'delete',
            :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
            :class => 'btn btn-danger'
