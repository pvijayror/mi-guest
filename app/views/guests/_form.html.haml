= simple_form_for @guest, :html => { :class => 'form-horizontal' } do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :town
  = f.association :country, :include_blank => false, :input_html => { :class => 'large_select' }
  = f.input :date_of_birth, :as => :date, :start_year => Date.today.year - 90,
                           :end_year => Date.today.year, :order => [:day, :month, :year]
  = f.association :nationality, :include_blank => false, :input_html => { :class => 'large_select' }
  = f.input :croatian_address
  = f.input :croatian_town

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")),
              guests_path, :class => 'btn'
