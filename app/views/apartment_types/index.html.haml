- model_class = ApartmentType.new.class

.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize

= link_to t('.new', :default => t("helpers.links.new")),
          new_apartment_type_path,
          :class => 'btn btn-primary'

%table{ :class => "table table-striped" }
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @apartment_types.each do |apartment_type|
      %tr
        %td= link_to apartment_type.name, edit_apartment_type_path(apartment_type)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_apartment_type_path(apartment_type), :class => 'btn btn-mini btn-info'
          = link_to t('.destroy', :default => t("helpers.links.destroy")),
                    apartment_type_path(apartment_type),
                    :method => :delete,
                    :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                    :class => 'btn btn-mini btn-danger'
