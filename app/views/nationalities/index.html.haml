- model_class = Nationality.new.class

.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize

= link_to t('.new', default: t("helpers.links.new")),
          new_nationality_path,
          class: 'btn btn-primary'

%table(class="table table-striped")
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @nationalities.each do |nationality|
      %tr
        %td= link_to nationality.name, edit_nationality_path(nationality)
        %td
          = link_to t('.edit', default: t("helpers.links.edit")),
                    edit_nationality_path(nationality),
                    class: 'btn btn-mini btn-info'
          = link_to t('.destroy', default: t("helpers.links.destroy")),
                    nationality_path(nationality),
                    method: :delete,
                    confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')),
                    class: 'btn btn-mini btn-danger'
