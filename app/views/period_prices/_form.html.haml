= simple_form_for @period_price, :html => { :class => 'form-horizontal' } do |f|
  = f.input :apartment_type_name, :url => autocomplete_apartment_type_name_period_prices_path,
                           :as => :autocomplete,
                           :input_html => { :id_element => "#period_price_apartment_type_id",
                                            :value => @apartment_type_name }
  = f.input :apartment_type_id, :as => :hidden   

  = f.input :from, :as => :date,
                            :start_year => Date.today.year,
                            :end_year => Date.today.year,
                            :order => [:day, :month],
                            :add_month_numbers => true

  = f.input :to, :as => :date,
                            :start_year => Date.today.year,
                            :end_year => Date.today.year,
                            :order => [:day, :month],
                            :add_month_numbers => true

  = f.input :price_euro
  = f.input :price

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")),
              period_prices_path, :class => 'btn'
