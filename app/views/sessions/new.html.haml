!!! 5
%html
%head
  %title MiGuest::Villa Marta::Login
  -# %link{"rel" => "stylesheet", "href" => "/stylesheets/sessions.css", "type" => "text/css", "media" => "all"}
  = stylesheet_link_tag "login", :media => "all"
  = csrf_meta_tags  
  %meta(name="viewport" content="width=device-width, initial-scale=1.0")
%body
  #login
    .wrapper
      .logo
      .form
        = form_tag sessions_path do
          %p
            = text_field_tag :username, params[:username], :class => 'input-text', :placeholder => t('.username')
          %p          
            = password_field_tag :password, nil, :class => 'input-password', :placeholder => t('.password')
          %p          
            -# = submit_tag t('.login'), :class => 'input-login'
            = submit_tag '', :class => 'input-login'
      %br.clear-fix      
